<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	style="?android:attr/buttonBarStyle" >
        
	    <Button
	        android:id="@+id/topuv_button_top"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_weight="1"
	        android:drawableLeft="@drawable/ic_action_good_dark"
	        android:background="@color/button_borderless"
	        android:text="@string/topuv_top" />
	
	    <Button
	        android:id="@+id/topuv_button_flop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_weight="1"
	        android:drawableLeft="@drawable/ic_action_bad"
	        android:background="@color/button_borderless"
	        android:text="@string/topuv_flop" />
	    
    </LinearLayout>

    <ListView
        android:id="@+id/topuv_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
