<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/UvFragment"
	   	android:name="fr.utt.topuv.controller.UvController"
	    tools:layout="@layout/main_fragment_uv" />
    
    <fragment
        android:id="@+id/fragment_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="fr.utt.topuv.controller.ListCommentController"
        android:smoothScrollbar="true"
        tools:layout="@layout/comments_list_entry" />
</LinearLayout>
