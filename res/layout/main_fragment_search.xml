<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Method 1 : by uv code prediction -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_method1"
            android:textColor="@color/name_bar_background"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_code_uv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_code_uv_title" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8" >
            </AutoCompleteTextView>
        </LinearLayout>

        <Button
            android:id="@+id/search_button_method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/search_button_title" />
    </LinearLayout>
    <!-- End of Method 1 -->


    <!-- Method 2 : by giving other informations -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_method2"
            android:textColor="@color/name_bar_background"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/search_categorie_uv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/search_categorie_uv_title" />

        <RadioGroup
            android:id="@+id/radioGroupUvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Row of radiogroup -->
            
            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_section0" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_section1" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_section2" />
            
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_section3" />

               <RadioButton
                   android:id="@+id/radio4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:text="@string/title_section4" />

        </RadioGroup>

        <TextView
            android:id="@+id/search_designation_uv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="@string/search_designation_uv_title" />

        <EditText
            android:id="@+id/search_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/search_description_uv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="@string/search_description_uv_title" />

        <EditText
            android:id="@+id/search_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="text" >
        </EditText>

        <Button
            android:id="@+id/search_button_method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/search_button_title" />
    </LinearLayout>

    <!-- End of Method 2 -->

</LinearLayout>